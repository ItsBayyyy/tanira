<body class="font-sans text-tanira-dark bg-tanira-cream antialiased selection:bg-tanira-green selection:text-white bg-pattern-leaf h-screen flex items-center justify-center overflow-hidden">

    <div class="max-w-4xl mx-auto px-6 py-12 relative z-10 text-center">
        
        <!-- Illustration Area -->
        <div class="relative mb-8 inline-block">
            <!-- Main 403 Text -->
            <h1 class="text-9xl md:text-[12rem] font-bold text-tanira-brown/10 select-none">403</h1>
            
            <!-- Overlay Image/Icon -->
            <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-32 h-32 md:w-40 md:h-40 bg-white rounded-full shadow-xl flex items-center justify-center border-4 border-tanira-cream animate-bounce" style="animation-duration: 3s;">
                    <!-- Gembok Icon -->
                    <i class="fa-solid fa-user-lock text-6xl md:text-7xl text-tanira-brown"></i>
                </div>
            </div>
            
            <!-- Floating Elements (Sign Warning) -->
            <div class="absolute top-1/4 -right-4 md:-right-12 animate-pulse" style="animation-duration: 2s;">
                <i class="fa-solid fa-ban text-red-400 text-5xl opacity-80 rotate-12"></i>
            </div>
        </div>

        <!-- Content -->
        <div class="space-y-6 relative z-20">
            <h2 class="text-3xl md:text-4xl font-bold text-tanira-dark">
